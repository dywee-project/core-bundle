{% for item in sidebar.admin %}
    {% if item.type is defined and item.type == 'header' %}
        <li class="header">MAIN NAVIGATION</li>
    {% elseif item.children is defined and item.children|length > 0 %}
        <li class="treeview">
            <a href="#">
                {% if item.icon is defined and item.icon != '' %}
                    <i class="{{ item.icon }}"></i>
                {% endif %}
                <span>{{ item.label|trans }}</span>
                <i class="fa fa-angle-left pull-right"></i>
            </a>
            <ul class="treeview-menu">
                {% for child in item.children %}
                    <li><a href="{{ child.route }}"><i class="{{ child.icon }}"></i> {{ child.label|trans }}</a></li>
                {% endfor %}
            </ul>
        </li>
    {% else %}
        <li class="active">
            <a href="{{ item.route }}">
                {% if item.icon is defined and item.icon != '' %}
                    <i class="{{ item.icon }}"></i>
                {% endif %}
                <span>{{ item.label }}</span>
            </a>
        </li>
    {% endif %}
{% endfor %}