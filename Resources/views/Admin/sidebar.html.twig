              </ul>
            </li>
            <li><a href="#"><i class="fa fa-circle-o"></i> Level One</a></li>
          </ul>
        </li>
                #}
            </ul>
        </li>
    {% elseif item.label is defined %}
        <li{% if item.active is defined and item.active %} class="active"{% endif %}>
            <a href="{{ item.route }}">
                {% if item.icon is defined and item.icon != '' %}
                    <i class="{{ item.icon }}"></i>
                {% endif %}
                <span>{{ item.label|trans }}</span>
            </a>
        </li>
    {% endif %}
{% endfor %}